<td><%= svg_tag 'bars', class: 'icon is-small text-grey is-drawable' %></td>
<td>
  <p>
    <%= link_to model.title, { controller: '/markdown/posts', action: 'show', base_name: model.git.base_name, slug: model.slug }, target: '_blank', class: 'text-weight-bold' %>
  </p>
  <p class="text-grey"><%= model.path %></p>
</td>
<td>
  <p><%= model.layout %></p>
  <p><%= model.target_i18n %></p>
</td>
<td>
  <%= form_with theme: 'switch', model: model, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
    <%= f.check_box :published, data: { action: 'input#submit' }, id: nil %>
  <% end %>
</td>
<td>
  <%= form_with theme: 'switch', model: model, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
    <%= f.check_box :nav, data: { action: 'input#submit' }, id: nil %>
  <% end %>
</td>
<td>
  <time data-controller="time"><%= model.last_commit_at.to_fs(:iso8601) %></time>
</td>
